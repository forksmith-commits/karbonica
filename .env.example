# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=host
DB_PORT=5432
DB_NAME=name
DB_USER=user
DB_PASSWORD=pass
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=host
REDIS_PORT=15454
REDIS_PASSWORD=pass
REDIS_DB=0

# JWT Configuration
JWT_SECRET=dev_secret_key_change_in_production_min_32_chars_required
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Cardano Configuration
CARDANO_NETWORK=preview
BLOCKFROST_API_KEY=apikey
BLOCKFROST_URL=https://cardano-preview.blockfrost.io/api/v0

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Storage Configuration
STORAGE_PROVIDER=supabase
# Supabase Configuration
SUPABASE_URL=url
SUPABASE_ANON_KEY=anonkey
SUPABASE_SERVICE_ROLE_KEY=servicerolekey
SUPABASE_STORAGE_BUCKET=project-documents

# Email Configuration (MailerSend - Best deliverability!)
# Set EMAIL_SERVICE to 'mailersend' to send real emails, or 'console' to log to console
EMAIL_SERVICE=console
MAILERSEND_API_KEY=apikey
MAILERSEND_FROM_EMAIL=hello@test.mlsender.net
MAILERSEND_FROM_NAME=Karbonica Team
FRONTEND_URL=http://localhost:3000

# Vault Configuration
# For development, use 'local-dev'. For production, use 'aws-kms', 'azure-keyvault', or 'hashicorp-vault'
VAULT_PROVIDER=local-dev
# AWS KMS Configuration (if using aws-kms)
VAULT_REGION=us-east-1
VAULT_KEY_ID=your-kms-key-id
VAULT_ACCESS_KEY_ID=your-access-key
VAULT_SECRET_ACCESS_KEY=your-secret-key
# Azure Key Vault Configuration (if using azure-keyvault)
VAULT_URL=https://your-keyvault.vault.azure.net/
VAULT_CLIENT_ID=your-client-id
VAULT_CLIENT_SECRET=your-client-secret
VAULT_TENANT_ID=your-tenant-id
# HashiCorp Vault Configuration (if using hashicorp-vault)
VAULT_URL=https://your-vault-server:8200
VAULT_TOKEN=your-vault-token

# Platform Wallet Configuration
PLATFORM_WALLET_NAME=karbonica-platform-wallet
PLATFORM_WALLET_MIN_BALANCE=100000000
PLATFORM_WALLET_ALERT_THRESHOLD=500000000
